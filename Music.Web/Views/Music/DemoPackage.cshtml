@using Music.Test

@using (var e = Html.TypeContext<DemoPackageDN>())
{
    @Html.ValueLine(e, f => f.Name)
    @Html.ValueLine(e, f => f.MainError)
    @Html.ValueLine(e, f => f.RequestedLines)
    @Html.ValueLine(e, f => f.DelayMilliseconds)
    @Html.ValueLine(e, f => f.ErrorRate)
    @Html.ValueLine(e, f => f.NumErrors, f => f.ReadOnly = true)

    if (!e.Value.IsNew)
    {
    <fieldset>
        <legend>Lines</legend>
        @Html.SearchControl(new FindOptions(typeof(DemoPackageLineDN), "Package", e.Value)
        {
            Create = false,
            Navigate = false,
        }, e)
    </fieldset>
    }
}